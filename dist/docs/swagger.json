          },
          {
            "name": "price",
            "in": "body",
            "required": true,
            "description": "The new price to set for the posted AD",
            "schema": {
              "properties": {
                "price": {
                  "type": "integer",
                  "format": "double",
                  "example": 1500000.24
                }
