    }
  },
  "definitions": {
    "ClientError": {
      "properties": {
        "status": {
          "type": "integer",
          "example": 400
        },
        "message": {
          "type": "string",
          "example": "There was an error in processing your request"
        }
      }
    },
    "ServerError": {
